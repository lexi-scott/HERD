<div style="--bs-primary: #982111;--bs-primary-rgb: 152,33,17;">
    <header
    class="masthead"
    style="background-image: url('assets/img/intro-bg.jpg');">
    <div class="intro-body">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h1 class="brand-heading" style="margin: 0px 0px 20px;">My Dashboard</h1>
            <h3
              class="brand-heading"
              style="font-size: 20px;color: var(--bs-black);">
            Hello {{ name }}, welcome to your livestock dashboard. Select the buttons below to get started.</h3>
          </div>
              <div class="row">
                <div class="btn-group" role="group" style="m-3">
                    <button class="btn btn-primary" type="button" style="background: var(--bs-primary);border-color: var(--bs-primary); m-3">My Livestock</button>
                </div>
                <div class="btn-group" role="group">
                    <button class="btn btn-primary" type="button" style="background: var(--bs-primary);border-color: var(--bs-primary); m-3">Add Livestock</button>
                </div>
