<h1 id="ranchID"> {{ranchNum}}</h1>
{{!document.getElementByID("ranchID").style.display = "none"; }}


{{! Path: views/viewCattle.handlebars }}

<div style="--bs-primary: #982111;--bs-primary-rgb: 152,33,17;">
    <header
    class="masthead"
    style="background-image: url('assets/img/intro-bg.jpg');">
    <div class="intro-body">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h1 class="brand-heading" style="margin: 0px 0px 20px;">My Dashboard</h1>
            <h3
              class="brand-heading"
              style="font-size: 20px;color: var(--bs-black);">
            Hello {{ name }}, View Your Cattle Below</h3>
            </div>
                <tbody>
                    {{#each prettycows}}
                    <tr>
                        <td>{{tagID}}</td>
                        <td>{{name}}</td>
                        <td>{{sex}}</td>
                        <td>{{vaccine}}</td>
                        <td>{{fatherID}}</td>
                        <td>{{motherID}}</td>
                        <td>{{birthday}}</td>
                        <td>{{currentLocation}}</td>
                        <td>{{notes}}</td>
                    </tr>
                    {{/each}}
                </tbody>

            </div>

          </div>
              <div class="row">
                <div class="btn-group" role="group" style="m-3">
                    <button id="my-livestock-btn"class="btn btn-primary" type="button" style="background: var(--bs-primary);border-color: var(--bs-primary); m-3">My Livestock</button>
                </div>
                <br>
                <div class="btn-group" role="group">
                    <button id="add-livestock-btn" class="btn btn-primary" type="button" style="background: var(--bs-primary);border-color: var(--bs-primary); m-3">Add Livestock</button>
                </div>
            </div>
        </div>
    </div>
    </div>
  </header>
</div>