<div>style='width:100%; height:150px;'>
    <h1 id="ranchId" style="text-align: center;">{{ranchNum}}</h1>
</div>
<section>
    <div class="container">
        <div class="col-lg-8 mx-auto">
            <h1>Add Livestock</h1>
            <section class="py-4 py-xl-5">
                <div class="container">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-6 col-xl-4">
                            <div class="card mb-5">
                                <div class="card-body d-flex flex-column align-items-center">
                                    <h4 style="text-align: center;background: var(--bs-primary);color:white; border-radius:10px">Add Livestock</h4>
                                    <div class="bs-icon-xl bs-icon-circle bs-icon-primary bs-icon my-4"
                                        style="background: var(--bs-primary);border-radius:10px"><svg xmlns="http://www.w3.org/2000/svg"
                                            width="2em" height="2em" fill="currentColor" viewBox="0 0 16 16"
                                            class="bi bi-person">
                                            <path
                                                d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z">
                                            </path>
                                        </svg></div>
                                    {{!-- start of form --}}
                                    <form class="livestock-form text-center" method="post">
                                        <div class="mb-3"><input id="tagID" class="form-control" type="input"
                                                name="tagID" placeholder="Tag ID Number"></div>
                                        <div class="mb-3"><input id="name" class="form-control" type="input" name="name"
                                                placeholder="Name"></div>
                                        <div class="mb-3"><input id="sex" class="form-control" type="input" name="sex"
                                                placeholder="Sex"></div>
                                        <div class="mb-3"><input id="fatherID" class="form-control" type="input"
                                                name="fatherID" placeholder="Father ID Number"></div>
                                        <div class="mb-3"><input id="motherID" class="form-control" type="input"
                                                name="motherID" placeholder="Mother ID Number"></div>
                                        <div class="mb-3"><input id="birthday" class="form-control" type="input"
                                                name="birthday" placeholder="Birthday"></div>
                                        <div class="mb-3"><input id="currentLocation" class="form-control" type="input"
                                                name="currentLocation" placeholder="Current Location/Block"></div>
                                        <div class="mb-3"><input id="notes" class="form-control" type="input"
                                                name="notes" placeholder="Additional notes"></div>
                                        <div class="mb-3"><input id="vaccine" type="checkbox" value="true"
                                                name="vaccine" /> 
                                                <label for="vaccine">Check box if vaccinated</label>
                                        </div>
                                        <div class="mb-3"><button id="submit-animal"
                                                class="btn btn-primary d-block w-100" type="submit" value="Submit"
                                                style="background: var(--bs-primary);color: var(--bs-card-bg);">Submit</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>

<script src="/js/addCattle.js"